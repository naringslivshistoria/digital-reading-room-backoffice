{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "types": [
      "jest",
      "node"
    ],
    "noErrorTruncation": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build"
  ]
}